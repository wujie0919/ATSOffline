<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <df.yyzc.com.yydf.widget.StatusView
        android:id="@+id/v_status"
        android:layout_width="match_parent"
        android:layout_height="13dp"
        android:background="#272727"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:background="#272727"
        android:gravity="left|center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/main_left_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:text="刘娜娜"
            android:textColor="#dfdfdf"
            android:textSize="@dimen/textsize_36px" />

        <TextView
            android:id="@+id/main_left_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:text="18912345678"
            android:textColor="#aaa9a9"
            android:textSize="@dimen/textsize_28px" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="95dip"
        android:background="#363636"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/main_left_num1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="85"
                android:textColor="#ffd800"
                android:textSize="@dimen/textsize_32px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:text="取车次数"
                android:textColor="#ebebeb"
                android:textSize="@dimen/textsize_24px" />


        </LinearLayout>


        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dip"
            android:layout_marginTop="15dip"
            android:background="#959595"></View>


        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/main_left_num2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="85km"
                android:textColor="#ffd800"
                android:textSize="@dimen/textsize_32px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:text="取车里程"
                android:textColor="#ebebeb"
                android:textSize="@dimen/textsize_24px" />
        </LinearLayout>


    </LinearLayout>


    <TextView
        android:id="@+id/main_left_history"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:layout_marginTop="5dip"
        android:gravity="left|center_vertical"
        android:paddingLeft="20dip"
        android:text="我的订单"
        android:textColor="#575757"
        android:textSize="@dimen/textsize_28px" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:background="#959595" />

    <TextView
        android:id="@+id/main_left_steplist"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:gravity="left|center_vertical"
        android:paddingLeft="20dip"
        android:text="租赁站列表"
        android:textColor="#575757"
        android:textSize="@dimen/textsize_28px" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:background="#959595" />


    <TextView
        android:id="@+id/main_left_stations"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:gravity="left|center_vertical"
        android:paddingLeft="20dip"
        android:text="租赁站问题反馈"
        android:textColor="#575757"
        android:textSize="@dimen/textsize_28px" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:background="#959595" />

    <TextView
        android:id="@+id/main_left_personnel"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:gravity="left|center_vertical"
        android:paddingLeft="20dip"
        android:text="地服人员管理"
        android:textColor="#575757"
        android:textSize="@dimen/textsize_28px" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:background="#959595" />

    <TextView
        android:id="@+id/tv_exit_txt"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:gravity="left|center_vertical"
        android:paddingLeft="20dip"
        android:text="退出"
        android:textColor="#575757"
        android:textSize="@dimen/textsize_28px" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:background="#959595" />
</LinearLayout>