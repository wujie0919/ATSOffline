<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ptr="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor"
    android:orientation="vertical">

    <include
        android:id="@+id/rl_title"
        layout="@layout/title_lay" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_title"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:id="@+id/rl_imgs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingLeft="17dip"
                android:paddingRight="17dip">


                <TextView
                    android:id="@+id/tab0"
                    android:layout_width="match_parent"
                    android:layout_height="45dip"
                    android:gravity="center_vertical"
                    android:text="添加上传照片"
                    android:textColor="#2b2b2b"
                    android:textSize="@dimen/textsize_28px" />


                <ImageButton
                    android:id="@+id/stationorn_add0"
                    android:layout_width="83dip"
                    android:layout_height="83dip"
                    android:layout_below="@+id/tab0"
                    android:background="@drawable/check_edit_bg"
                    android:padding="1dip"
                    android:scaleType="centerCrop"
                    android:src="@drawable/add" />

                <ImageButton
                    android:id="@+id/stationorn_add1"
                    android:layout_width="83dip"
                    android:layout_height="83dip"
                    android:layout_below="@+id/tab0"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/check_edit_bg"
                    android:padding="1dip"
                    android:scaleType="centerCrop"
                    android:src="@drawable/add" />

                <ImageButton
                    android:id="@+id/stationorn_add2"
                    android:layout_width="83dip"
                    android:layout_height="83dip"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/tab0"
                    android:background="@drawable/check_edit_bg"
                    android:padding="1dip"
                    android:scaleType="centerCrop"
                    android:src="@drawable/add" />

                <ImageButton
                    android:id="@+id/stationorn_add3"
                    android:layout_width="83dip"
                    android:layout_height="83dip"
                    android:layout_below="@+id/stationorn_add0"
                    android:layout_marginTop="20dip"
                    android:background="@drawable/check_edit_bg"
                    android:padding="1dip"
                    android:scaleType="centerCrop"
                    android:src="@drawable/add" />

                <ImageButton
                    android:id="@+id/stationorn_add4"
                    android:layout_width="83dip"
                    android:layout_height="83dip"
                    android:layout_below="@+id/stationorn_add0"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dip"
                    android:background="@drawable/check_edit_bg"
                    android:padding="1dip"
                    android:scaleType="centerCrop"
                    android:src="@drawable/add" />

                <ImageButton
                    android:id="@+id/stationorn_add5"
                    android:layout_width="83dip"
                    android:layout_height="83dip"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/stationorn_add0"
                    android:layout_marginTop="20dip"
                    android:background="@drawable/check_edit_bg"
                    android:padding="1dip"
                    android:scaleType="centerCrop"
                    android:src="@drawable/add" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/stationorn_add3"
                    android:layout_marginTop="12dp"
                    android:paddingBottom="12dp"
                    android:text="注意：每次照片最多可上传6张，请务必保证照片的清晰度和完整度"
                    android:textColor="#979797"
                    android:textSize="@dimen/textsize_18px" />


            </RelativeLayout>

            <TextView
                android:id="@+id/check_submit"
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dip"
                android:layout_marginLeft="25dip"
                android:layout_marginRight="25dip"
                android:layout_marginTop="15dip"
                android:background="@drawable/dialog_gavecarbutton_pre"
                android:gravity="center"
                android:text="确认上传"
                android:textColor="@color/white" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>