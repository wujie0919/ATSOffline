<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_back"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="75dp"
        android:layout_height="75dip"
        android:layout_marginTop="70dip"
        android:src="@drawable/icon_logo" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dip"
        android:text="@string/app_name"
        android:textColor="#ff7200"
        android:textSize="@dimen/textsize_36px"
        android:textStyle="bold" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="46dip"
        android:layout_marginLeft="36dip"
        android:layout_marginRight="36dip"
        android:layout_marginTop="23dip"
        android:background="@drawable/login_button_bg">


        <ImageView
            android:layout_width="15dip"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dip"
            android:src="@drawable/login_ph" />


        <EditText
            android:id="@+id/login_ed_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="38dip"
            android:layout_marginRight="38dip"
            android:background="@null"
            android:nextFocusForward="@+id/login_ed_pw"
            android:singleLine="true" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="46dip"
        android:layout_marginLeft="36dip"
        android:layout_marginRight="36dip"
        android:layout_marginTop="23dip"
        android:background="@drawable/login_button_bg">


        <ImageView
            android:layout_width="15dip"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dip"
            android:src="@drawable/login_pw" />


        <EditText
            android:id="@+id/login_ed_pw"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="38dip"
            android:layout_marginRight="38dip"
            android:background="@null"
            android:password="true"
            android:singleLine="true"
            android:text="" />


    </RelativeLayout>


    <TextView
        android:id="@+id/login_bt_login"
        android:layout_width="match_parent"
        android:layout_height="46dip"
        android:layout_marginLeft="36dip"
        android:layout_marginRight="36dip"
        android:layout_marginTop="42dip"
        android:background="@drawable/login_login_bg"
        android:gravity="center"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_30px" />


</LinearLayout>